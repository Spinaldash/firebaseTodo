doctype html
html
  head
    meta(charset='utf-8')      
    title Todo - Firebase Edition
    link(rel='stylesheet', href='/vendor/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    h1#header.centerText Welcome to Todo-Firebase
    hr
    .centerText
      label Enter your name here:
      input#name(type=text, autofocus=true)
      button#set-name Set Name
    hr
    .jumbotron.lessPadding.centerText
      h2 Create a Task:
      #controls
        input#title(type='text', placeholder = 'Title')
        input#due-date(type='date')
        select#priority
          option High
          option Medium
          option Low
        button#create-task Create Task
    hr
    #table
      table.table
        thead
          th Delete
          th Is Complete?
          th Title
          th Due Date
          th Priority
          th Created At
        tbody#toDos

    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src='/vendor/moment/min/moment.min.js')
    script(src='/vendor/bootstrap/dist/js/bootstrap.min.js')
    script(src='/vendor/firebase/firebase.js')
    script(src='/vendor/lodash/lodash.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
